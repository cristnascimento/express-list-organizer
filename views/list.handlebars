<div class="container col-md-8" >
        <br/>
        <h3>List of contacts</h3><br/>
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">First</th>
                  <th scope="col">Last</th>
                  <th scope="col">E-mail</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                {{#contacts}}
                <tr>
                  <th scope="row">1</th>
                  <td>{{firstName}}</td>
                  <td>{{lastName}}</td>
                  <td>{{email}}</td>
                  <td>
                    <a class="btn btn-success" href="/contact/view/{{id}}" role="button">View</a>
                    <a class="btn btn-warning" href="/contact/edit/{{id}}" role="button">Edit</a>
                    <a class="btn btn-danger" href="/contact/delete/{{id}}" role="button">Remove</a>
                  </td>
                </tr>
                {{/contacts}}
              </tbody>
            </table>
  </div>
